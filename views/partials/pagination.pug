- var subDir = !tag ? 'page' : 'tag'

div.pagination
  - var newer = Number(curPage) - 1
  if newer > 0
    a(href='/'+ subDir +'/' + newer) newer
  else
    span newer
  - var i = 1
  while i <= pages
    if i == curPage
      span=i
    else
      a(href='/'+ subDir +'/' + i) #{i}
    - i++
  - var older = Number(curPage) + 1
  if older <= pages
    a(href='/'+subDir+'/' + older) older
  else
    span older

